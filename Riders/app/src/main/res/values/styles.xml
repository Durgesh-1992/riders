<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBar">true</item>
    </style>

    <style name="text_welcome_view_14sp">
        <item name="android:fontFamily">@string/Dancing_Regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>

    <style name="text_welcome_view_15sp">
        <item name="android:fontFamily">@string/Dancing_Bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="text_welcome_view_25sp">
        <item name="android:fontFamily">@string/Dancing_Bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_25sp</item>
    </style>

    <style name="TextAppearance.App.TextInputLayoutBlue" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_11sp</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="edit_text_view_25sp">
        <item name="android:fontFamily">@string/Dancing_Bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textSize">@dimen/text_size_25sp</item>
    </style>

</resources>
