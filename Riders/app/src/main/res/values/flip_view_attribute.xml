<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="FlipImageView">
        <attr name="isAnimated" format="boolean" />
        <attr name="isFlipped" format="boolean" />
        <attr name="flipDrawable" format="reference" />
        <attr name="flipDuration" format="integer" />
        <attr name="flipInterpolator" format="reference" />
        <attr name="flipRotations">
            <flag name="none" value="0" />
            <flag name="x" value="1" />
            <flag name="y" value="2" />
            <flag name="z" value="4" />
        </attr>
        <attr name="reverseRotation" format="boolean"></attr>
    </declare-styleable>

    <bool name="default_fiv_isAnimated">true</bool>
    <bool name="default_fiv_isFlipped">false</bool>
    <integer name="default_fiv_duration">500</integer>
    <!--Rotation Y-->
    <integer name="default_fiv_rotations">3</integer>
    <!--Default rotation is CCW-->
    <bool name="default_fiv_isRotationReversed">false</bool>
</resources>